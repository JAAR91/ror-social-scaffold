<!DOCTYPE html>
<html>
  <head>
    <title>RorSocialScaffold</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  </head>
  <body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <nav class="nav d-flex justify-content-between">
      
      <div class="nav d-flex justify-content-between">
        <div class='mx-4'>
          <%= link_to 'Stay in touch', root_path %>
        </div>
        <div class="menu-item mx-4">
          <%= menu_link_to 'Timeline', posts_path %>
        </div>
        <div class="menu-item mx-4">
          <%= menu_link_to 'All users', users_path %>
        </div>
        <% if current_user %>
          <div class="menu-item mx-4">
              <%= menu_link_to 'Notifications', invitations_path(current_user.id) %>
          </div>
          <div class="menu-item mx-4">
              <%= menu_link_to 'My friends', user_friendships_path(current_user.id) %>
          </div>
         <% end %>
      </div>
      <div class='d-flex'>
        <% if current_user %>
          <p class="mx-2">Welcome, <%= current_user.name %></p>
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'Sign in', user_session_path %>
        <% end %>
      </div>
    </nav>
     
      <% if notice.present? %>
        <div class="notice container p-0">
          <p class="m-0 p-0"> <%= notice %> </p>
        </div>
      <% end %>
    <% if alert.present? %>
      <div class="alert container p-0">
        <p class="m-0 p-0"> <%= alert %> </p>
      </div>
    <% end %>
    <main class="main">
      <%= yield %>
    </main>
  </body>
</html>
